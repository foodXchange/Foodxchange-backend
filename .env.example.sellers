# Add these to your .env file:

# Seller Configuration
SELLER_APPROVAL_REQUIRED=true
SELLER_DOCUMENT_UPLOAD_SIZE=10485760
SELLER_COMMISSION_RATE=0.03
SELLER_FREE_TRIAL_DAYS=30

# Email Templates
SELLER_WELCOME_EMAIL_TEMPLATE=seller-welcome
SELLER_APPROVAL_EMAIL_TEMPLATE=seller-approved
SELLER_REJECTION_EMAIL_TEMPLATE=seller-rejected

# File Storage
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection
AZURE_STORAGE_CONTAINER_SELLER_DOCS=seller-documents
AZURE_STORAGE_CONTAINER_PRODUCT_IMAGES=product-images
