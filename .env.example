# FoodXchange Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/foodxchange
DB_NAME=foodxchange

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Azure Search Configuration (if using Azure Search)
AZURE_SEARCH_SERVICE_NAME=your_service_name
AZURE_SEARCH_ADMIN_KEY=your_admin_key_here
AZURE_SEARCH_QUERY_KEY=your_query_key_here

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# External Service URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
