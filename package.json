{
  "name": "foodxchange-backend",
  "version": "1.0.0",
  "description": "FoodXchange B2B marketplace backend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/src/server-optimized.js",
    "start:app": "node dist/src/app-backend.js",
    "dev": "nodemon --exec ts-node --transpile-only src/server-optimized.ts",
    "dev:app": "nodemon --exec ts-node --transpile-only src/app-backend.ts",
    "dev:safe": "ts-node --transpile-only src/server-optimized.ts",
    "dev:simple": "ts-node --transpile-only src/server-simple.ts",
    "dev:legacy": "ts-node --transpile-only src/server.ts",
    "build": "rimraf dist && tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*.json\" \"src/**/*.html\" \"src/**/*.txt\" dist/ && copyfiles package.json web.config .env* dist/",
    "build:watch": "tsc --watch",
    "build:docker": "docker build -t foodxchange-backend .",
    "start:dev": "ts-node src/server-optimized.ts",
    "start:test": "ts-node src/test-server.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.ts$ --detectOpenHandles",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "test:e2e": "jest --testPathPattern=e2e --detectOpenHandles --forceExit --runInBand",
    "test:load": "npm run build && node dist/scripts/load-test.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist logs",
    "migrate": "ts-node src/scripts/migrate.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f foodxchange-backend",
    "health": "curl -f http://localhost:5000/health || echo 'Health check failed'"
  },
  "keywords": [
    "foodxchange",
    "b2b",
    "marketplace",
    "food",
    "compliance"
  ],
  "author": "FoodXchange Team",
  "license": "ISC",
  "dependencies": {
    "@azure/ai-form-recognizer": "^5.1.0",
    "@azure/ai-text-analytics": "^5.1.0",
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@azure/communication-email": "^1.0.0",
    "@azure/communication-sms": "^1.2.0-beta.4",
    "@azure/core-auth": "^1.10.0",
    "@azure/ms-rest-js": "^2.7.0",
    "@azure/openai": "^1.0.0-beta.10",
    "@azure/search-documents": "^12.1.0",
    "@azure/service-bus": "^7.9.5",
    "@azure/storage-blob": "^12.27.0",
    "@types/ioredis": "^4.28.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "applicationinsights": "^3.7.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.10.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.7.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
